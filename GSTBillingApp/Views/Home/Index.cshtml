@model GSTBillingApp.Models.OwnerListViewModel
@{
    ViewBag.Title = "Home Page";
}
<div class="container-fluid">
<div class="row" style="height:560px">
    <div class="col-12 h-100 bg-light">
        <div class="row mt-4">

            <div class="col-8 ">
                <div class="form-group">
                    <div class="text-info h4">Owner Dashboard</div>
                </div>
            </div>
            <div class="col-4 ">
                <div class="form-group text-right">

                    <a class="btn btn-info" href="@Url.Action("ManageOwner", "Home")"><span class="fa fa-plus"></span></a>

                </div>
            </div>

        </div>

        <div class="row" style="margin-top:-14px">


            <div class="col-12">

                <div class="table-responsive">
                    <table class="table table-borderless table-hover device-table">
                        <thead class="thead-dark bg-info text-white">
                            <tr>
                                <td>Owner Name</td>
                                <td>GST Number</td>
                                <td>Contact Number</td>
                                <td>Owner Address</td>
                                <td></td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ownersList)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelitem => item.OwnerName)</td>
                                    <td>@Html.DisplayFor(modelitem => item.GSTNo)</td>
                                    <td>@Html.DisplayFor(modelitem => item.ContactNo)</td>
                                    <td>@Html.DisplayFor(modelitem => item.OwnerAddress)</td>
                                    <td><a class="btn btn-info" href="#"><span class="fa fa-file-invoice-dollar"> Invoices</span></a></td>
                                    <td>
                                        <a class="btn btn-info" href="@Url.Action("ManageOwner", "Home",new {OwnerId=item.Id })"><span class="fa fa-edit"></span></a>
                                        <button class="btn btn-danger" type="button" onclick="DeleteOwner(@item.Id)"><span class="fa fa-trash"></span></button>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

@section scripts{

    <script src="~/js/jsOwner.js"></script>
}
