@model GSTBillingApp.Models.OwnerListViewModel
@{
    ViewBag.Title = "Home Page";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 mt-2">
            <div class="form-group">
                <button class="btn btn-light btn-toolbar" type="button"> Add  Owner</button>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table">
                    <thead class="thead-dark">
                        <tr>
                            <td>Owner Name</td>
                            <td>GST Number</td>
                            <td>Contact Number</td>
                            <td>Owner Address</td>
                            <td></td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var item in Model.ownersList)
                       {
                           <tr>
                               <td>@Html.DisplayFor(modelitem=>item.OwnerName)</td>
                               <td>@Html.DisplayFor(modelitem=>item.GSTNo)</td>
                               <td>@Html.DisplayFor(modelitem=>item.ContactNo)</td>
                               <td>@Html.DisplayFor(modelitem=>item.OwnerAddress)</td>
                               <td>Invoices</td>
                               <td><i class=""></i></td>
                           </tr>

                       }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>